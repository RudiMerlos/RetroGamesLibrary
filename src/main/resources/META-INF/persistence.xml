<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
    http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">

  <persistence-unit name="emulatorsdb" transaction-type="RESOURCE_LOCAL">
    <class>org.rmc.retrogameslibrary.model.Emulator</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="objectdb:./db/emulatorsdb" />
      <property name="javax.persistence.jdbc.user" value="retrogameslibrary" />
      <property name="javax.persistence.jdbc.password" value="retrogameslibrary" />
    </properties>
  </persistence-unit>
</persistence>